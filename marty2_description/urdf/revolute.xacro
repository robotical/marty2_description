<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="revolute" params="name parent material joint_name:='' mesh mesh_x:=0 mesh_y:=0 mesh_roll:=0 mesh_pitch:=0 mesh_yaw:=0 rot_r:=0 rot_p:=0 rot_y:=0 mimic_joint:='' mimic_mult:='' *origin *limit">
  <xacro:if value="${joint_name == ''}">
    <xacro:property name="joint_name" value="${name}_joint"/>
  </xacro:if>
    <joint name="${joint_name}" type="revolute">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${name}"/>
      <axis xyz="${rot_r} ${rot_p} ${rot_y}"/>
      <xacro:if value="${mimic_joint != ''}">
        <mimic joint="${mimic_joint}" multiplier="${mimic_mult}"/>
      </xacro:if>
      <xacro:insert_block name="limit" />
    </joint>
    <link name="${name}">
      <inertial>
        <mass value="1e-5"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://marty2_description/meshes/${mesh}.stl"/>
        </geometry>
        <origin xyz="${mesh_x} ${mesh_y} 0" rpy="${mesh_roll} ${mesh_pitch} ${mesh_yaw}"/>
        <material name="${material}"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://marty2_description/meshes/${mesh}.stl"/>
        </geometry>
        <origin xyz="${mesh_x} ${mesh_y} 0" rpy="${mesh_roll} ${mesh_pitch} ${mesh_yaw}"/>
        <material name="${material}"/>
      </collision>
    </link>
  </xacro:macro>
</robot>
